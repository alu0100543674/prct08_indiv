require 'matriz.rb'

describe Matriz do
  before (:each) do
     @matriz1 = Matriz.new(2, 2, 1, 2, 3, 4)
     @matriz2 = Matriz.new(2, 2, 4, 3, 2, 1)
     @matrizsuma = Matriz.new(2, 2, 5, 5, 5, 5)



  end 
   

 
     it " Suma" do
        (@matriz1 + @matriz2).should == @matrizsuma
     end

 

end
